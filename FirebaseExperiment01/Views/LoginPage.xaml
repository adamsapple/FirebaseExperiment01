<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseExperiment01.Views.LoginPage"
             Title="LoginPage"
             Shell.PresentationMode="Modal">
    <VerticalStackLayout VerticalOptions="Center" Padding="10">
        <Label 
            Text="{Binding Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="20" />
        <Button Text="Login Wigh Google"  Command="{Binding LoginWithGoogleCommand}" CommandParameter="test" VerticalOptions="End" Margin="10"/>
        <Button Text="Get Logs"  Command="{Binding GetActivityLogsCommand}" CommandParameter="test" VerticalOptions="End" Margin="10" />
        <Button Text="Del Logs"  Command="{Binding DeleteLogsCommand}" CommandParameter="test" VerticalOptions="End" Margin="10" />
    </VerticalStackLayout>
</ContentPage>