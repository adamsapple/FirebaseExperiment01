<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirebaseExperiment01.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FirebaseExperiment01.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FirebaseExperiment01">

    <ShellContent Route="Blank"
                ContentTemplate="{DataTemplate views:BlankPage}" />

    <TabBar>
        <Tab Title="Home">
            <ShellContent Route="Home"
                ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Option">
            <ShellContent  Route="Option"
                ContentTemplate="{DataTemplate views:OptionPage}" />
        </Tab>
    </TabBar>
</Shell>
